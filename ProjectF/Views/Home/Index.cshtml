@{
    ViewData["Title"] = "Home Page";
   
}
@model IEnumerable<ProjectF.Models.Event> 
   
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Feeds</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>

                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">News</h3>


                        <div class="card-body">
                            <!-- The timeline -->
                            <div class="timeline timeline-inverse">
                                <!-- timeline time label -->
                                @foreach (var item in Model)
                                {
                                    <div class="time-label">
                                        <span class="bg-danger">
                                            @item.Date
                                        </span>
                                    </div>
                                    <!-- /.timeline-label -->
                                    <!-- timeline item -->


                                    @foreach (var iitem in item.DayEvents)
                                    {
                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@iitem.TimeLeft ago</span>
                                                <h3 class="timeline-header"><a href="#">@iitem.User.Username</a> @iitem.Action</h3>
                                                <div class="timeline-body">
                                                    @iitem.Description
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Read more</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- END timeline item -->
                                        <!-- timeline item -->


                                        <div>
                                            <i class="fas fa-user bg-info"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@iitem.TimeLeft</span>
                                                <h3 class="timeline-header border-0">
                                                    <a href="#">@iitem.User.Username  </a>@iitem.Description
                                                </h3>
                                            </div>
                                        </div>
                                    }

                                    <!-- END timeline item -->
                                    <!-- timeline item -->


                                    <div class="time-label">
                                        <span class="bg-danger">

                                            @item.Date


                                        </span>
                                    </div>

                                   @foreach (var iitem in item.DayEvents)
                                    {
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@iitem.TimeLeft</span>
                                                <h3 class="timeline-header"><a href="#">@iitem.User.Username</a> @iitem.Action</h3>
                                                <div class="timeline-body">
                                                    @iitem.Description
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="#" class="btn btn-warning btn-flat btn-sm">View comment</a>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END timeline item -->
                                        <!-- timeline time label -->

                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@iitem.TimeLeft</span>
                                                <h3 class="timeline-header"><a href="#">@iitem.User.Username</a> @iitem.Action</h3>
                                                <div class="timeline-body">
                                                    @iitem.Description
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Read more</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                                </div>
                                            </div>
                                        </div>}}
                                <!-- /.timeline-label -->
                                <!-- timeline item -->
                                <!-- END timeline item -->

                            </div>
                        </div> }
                        <!-- /.card-body -->
                        <!-- /.card-footer-->
                    </div>


                </div>


            </section>
        </div>
