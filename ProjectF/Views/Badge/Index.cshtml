@model IEnumerable<ProjectF.Models.Badge>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">badges</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Default box -->
            <div class="row">
                <div class="col-md-8">
                    <h2>Badges </h2>
                    <hr>
                    <div class="card">
                        <div class="card-header p-2">
                            <h2 class="card-title text-primary">This Month achievement</h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">Challenges</th>
                                            
                                            <th>Your progress</th>
                                            <th style="width: 80px">Label</th>
                                            <th style="width: 20%">Started</th>
                                            <th style="width: 20%">Badge-deadline</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                
                                                <td>@item.Title</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar progress-bar-danger" style="width:@item.UserProgression%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-danger">@item.UserProgression %</span></td>
                                                <td>@item.StartedAt</td>
                                                <td>@item.BadgeDeadline </td>
                                            </tr>
                                         
                                        }
                                    </tbody>

                                    </table>

                            </div>

                        </div>

                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <hr>
                    <div class="card">
                        <div class="card-header p-2">
                            <h2 class="card-title text-primary">
                                <i class="nav-icon far fa-grin-beam">     </i>  Trophies & Badges
                            </h2>
                        </div>
                        <!-- /.tab-pane Trophies badges-->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <table class="table table-striped projects">
                                    <thead>
                                        <tr>
                                            <th style="width: 1%">

                                            </th>
                                            <th style="width: 20%">
                                                Badge Title
                                            </th>
                                            <th style="width: 30%">
                                                Badge Icon
                                            </th>
                                            <th>
                                                Obtain Date
                                            </th>

                                            <th style="width: 20%">
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                            </td>
                                            <td>
                                                <a>
                                                    First Commits winner
                                                </a>
                                                <br />
                                            </td>
                                            <td>
                                                <img alt="Avatar" class="table-avatar" src="../../dist/img/badge.png">
                                            </td>
                                            <td>
                                                Obtained 01/02/2019
                                            </td>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-primary btn-sm" href="../examples/Badge-detail.html">
                                                    <i class="fas fa-folder">
                                                    </i>
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                            </td>
                                            <td>
                                                <a>
                                                    100 Commits winner
                                                </a>
                                                <br />
                                            </td>
                                            <td>
                                                <img alt="Avatar" class="table-avatar" src="../../dist/img/badge.png">
                                            </td>
                                            <td>
                                                Obtained 01/03/2019
                                            </td>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-primary btn-sm" href="../examples/Badge-detail.html">
                                                    <i class="fas fa-folder">
                                                    </i>
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<footer class="main-footer">
    <div class="float-right d-none d-sm-block">
