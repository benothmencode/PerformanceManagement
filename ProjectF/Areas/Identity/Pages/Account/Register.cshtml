@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h3 class="text-primary"><i class="fas fa-info-circle"></i>Add new Employee </h3>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"> <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Register"></a></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class=" hold-transition login-page">
        <div class="login-box">
            <div class="card">
                <div class="card-body login-card-body">
                   
                    <div class="row">
                        <div class="col-xl-12">
                            <section>
                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <h4>Create a new account.</h4>
                                    <hr />
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="input-group mb-3">

                                        <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />

                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">

                                        <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">

                                        <input asp-for="Input.UserName" class="form-control" placeholder="Username" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="input-group mb-3">

                                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">

                                        <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">

                                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Your Password" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="UserSystemsvm.systemes">Systemes:</label>
                                        <select type="button" class="btn btn-md btn-secondary" asp-for="UserSystemsvm.SelectedSystemesID" asp-items="@Model.UserSystemsvm.systemes">
                                            <option value="" selected disabled>-- Select Systeme Name --</option>
                                        </select>
                                        <span asp-validation-for="UserSystemsvm.SelectedSystemesID" class="text-danger"></span>
                                        
                                    </div>
                                    <div class="input-group mb-3">

                                        <input asp-for="Input.Identifier" class="form-control" placeholder="Systeme Identifier" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="Input.Identifier" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">

                                        <input asp-for="Input.UrlAccount" class="form-control" placeholder="User UrlAccount" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="Input.UrlAccount" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
