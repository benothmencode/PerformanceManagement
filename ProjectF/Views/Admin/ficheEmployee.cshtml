@model PerformanceManagement.ENTITIES.User
@{
    ViewData["Title"] = "ficheEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h3 class="text-primary"><i class="fas fa-info-circle"></i>  Challenge Detail</h3>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">badge-Details</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                <div class="card bg-light">
                    <div class="card-header text-muted border-bottom-0">
                       Developper
                    </div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-7">
                                <h2 class="lead"><b>@Model.UserName </b></h2>
                                @if (Model.Skills != null || Model.Email != null || @Model.Location != null)
                                {
                                    <p class="text-muted text-sm"><b>About: </b> @Model.Skills <br /> @Model.Email <br /> @Model.Location  </p>
                                }
                                @foreach (var service in Model.SystemeUsers)
                                {
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                    Service cinfiguration :
                                    <li class="small"><span class="fa-li"></span></li>
                                    <li class="small"><span class="fa-li"></span> ientifier : @service.Identifier </li>
                                    <li class="small"><span class="fa-li"></span>urlAccount : @service.UrlUserSystemAccount </li>
                                </ul>
                                }
                            </div>
                            <div class="col-5 text-center">
                                <img src="~/theme/dist/img/@Model.Userimage" alt="" class="img-circle img-fluid">
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            </section>
</div>