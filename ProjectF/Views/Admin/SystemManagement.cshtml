        function Desctivate(id) {
            $.confirm({
                title: 'Confirm!',
                content: 'Simple confirm!',
                buttons: {
                    confirm: function () {
                        $.ajax({
                            url: "/Admin/disabelSysteme",
                            type: "POST",
                            dataType: "json",
                            data: { SystemId: id },
                            success: function (data) {
                                if (data.success) {
                                    alert(data.responseText);
                                    window.location.reload(true);
                                }
                                else {
                                    alert(data.responseText);
                                }
                            }
                        });
                        $.alert('Confirmed!');
                    },
                    cancel: function () {
                        $.alert('Canceled!');
                    },
                }
            });
        }






