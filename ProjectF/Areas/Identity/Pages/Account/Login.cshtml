@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
  
        <!-- Content Header (Page header) -->
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h3 class="text-primary"><i class="fas fa-info-circle"></i>  Login Page</h3>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"> <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">LoginPage/</a></li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class=" hold-transition login-page">
            <div class="login-box">
                <div class="card">
                    <div class="card-body login-card-body">
                        <p class="login-box-msg">Sign in to start your session</p>

                        <div class="row">
                            <div class="col-xl-8">
                                <section>
                                    <form id="account" method="post">
                                        <h4>Use a local account to log in.</h4>
                                        <hr />
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="input-group mb-3">
                                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span asp-validation-for="Input.Email" class="fas fa-envelope"></span>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            <input asp-for="Input.UserName" class="form-control" placeholder="Username" />

                                        </div>
                                        <div class="input-group mb-3">

                                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-8">
                                                <div class="icheck-primary">

                                                    <label asp-for="Input.RememberMe">
                                                        <input asp-for="Input.RememberMe" />
                                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <button type="submit" class="btn btn-primary btn-block">Log in</button>
                                        </div>
                                        <br />
                                        <div class="form-group">
                                            <p class="mb-1">
                                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                            </p>
                                            <p class="mb-0">
                                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                            </p>
                                            <p class="mb-0">
                                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                            </p>
                                        </div>
                                    </form>
                                </section>
                            </div>

